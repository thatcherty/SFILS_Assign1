@page
@model SFILS.Pages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create Patron</h2>

<form method="post">
    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Patron Type</label>
            <select class="form-select" asp-for="Patron.Patron_Type_Code" asp-items="Model.PatronTypeOptions"></select>
        </div>
        <div class="col-md-6">
            <label class="form-label">Age Range</label>
            <select class="form-select" asp-for="Patron.Age_Range_Code" asp-items="Model.AgeRangeOptions"></select>
        </div>
        <div class="col-md-6">
            <label class="form-label">Home Library</label>
            <select class="form-select" asp-for="Patron.Home_Library_Code" asp-items="Model.HomeLibraryOptions"></select>
        </div>
        <div class="col-md-6">
            <label class="form-label">Notification Preference</label>
            <select class="form-select" asp-for="Patron.Notif_Pref_Code" asp-items="Model.NotificationPrefOptions"></select>
        </div>

        <div class="col-md-3 form-check mt-4">
            <input class="form-check-input" type="checkbox" asp-for="Patron.Provided_Email" />
            <label class="form-check-label" asp-for="Patron.Provided_Email"></label>
        </div>
        <div class="col-md-3 form-check mt-4">
            <input class="form-check-input" type="checkbox" asp-for="Patron.Within_County" />
            <label class="form-check-label" asp-for="Patron.Within_County"></label>
        </div>

        <div class="col-md-3">
            <label class="form-label" asp-for="Patron.Year_Reg"></label>
            <input class="form-control" asp-for="Patron.Year_Reg" />
        </div>
        <div class="col-md-3">
            <label class="form-label" asp-for="Patron.Total_Checkouts"></label>
            <input class="form-control" asp-for="Patron.Total_Checkouts" />
        </div>
        <div class="col-md-3">
            <label class="form-label" asp-for="Patron.Total_Renewals"></label>
            <input class="form-control" asp-for="Patron.Total_Renewals" />
        </div>
        <div class="col-md-3">
            <label class="form-label" asp-for="Patron.Circ_Active_Mo"></label>
            <input class="form-control" asp-for="Patron.Circ_Active_Mo" />
        </div>
        <div class="col-md-3">
            <label class="form-label" asp-for="Patron.Circ_Active_Yr"></label>
            <input class="form-control" asp-for="Patron.Circ_Active_Yr" />
        </div>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary" type="submit">Create</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </div>

    <div class="text-danger mt-2" asp-validation-summary="All"></div>
</form>